<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">


    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/icon_circle"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="biBilet.com"
            android:textColor="#373c52"
            android:textStyle="bold"
            android:textSize="28sp"/>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="220dp"
            android:id="@+id/imageGif" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_input"
            android:padding="0dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            android:backgroundTint="@color/white"
            android:textColorHint="#373c52"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/ic_email1"
                android:drawablePadding="8dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="#373c52"
                android:textSize="18sp"
                android:textStyle="bold"
                android:hint="E-posta"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_input"
            android:padding="0dp"
            app:endIconMode="password_toggle"
            app:endIconTint="#373c52"
            android:backgroundTint="@color/white"
            android:textColorHint="#373c52"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#373c52"
                android:textSize="18sp"
                android:textStyle="bold"
                android:hint="Şifre"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/lblHesapOlustur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="Hesap Oluştur"
            android:textColor="#373c52"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnGirisYap"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="11dp"
            android:text="Giriş Yap"
            android:textAllCaps="false"
            android:backgroundTint="#373c52"
            android:textSize="15dp"
            android:background="@drawable/ripple_effect"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>