<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/Hesap_CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#e9e9e9"
        Android:layout_marginBottom="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFragBiletIslem"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/tickets" />

            <TextView
                android:id="@+id/txtBiletDurum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="44dp"
                android:text="Durum"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lineBilet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgFragBiletIslem"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/line5" />

            <TextView
                android:id="@+id/txtHareketBilgi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="105dp"
                android:text="Nerden-Nereye"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtHareketTarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtHareketBilgi"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Tam tarih ve saat"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lineBilet2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/txtHareketTarih"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/line5" />

            <TextView
                android:id="@+id/txtBiletAdSoyad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineBilet2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-21dp"
                android:text="Ad Soyad"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBiletAdSoyad"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="PNR"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPnrNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt1"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:text="1944109"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/koltukNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineBilet2"
                android:layout_marginStart="95dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/txt1"
                android:text="Koltuk No"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtkoltukNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/koltukNo"
                android:layout_marginStart="69dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/txtPnrNo"
                android:text="21"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineBilet2"
                android:layout_marginStart="72dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/koltukNo"
                android:text="Fiyat"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtBiletFiyat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fiyat"
                android:layout_marginStart="117dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@+id/txtkoltukNo"
                android:text="250 TL"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lineBilet3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/txtkoltukNo"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/line5" />

            <TextView
                android:id="@+id/toplamTutar"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_below="@+id/lineBilet3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-15dp"
                android:text="Toplam Tutar:"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttoplamTutar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineBilet3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="272dp"
                android:layout_marginTop="-15dp"
                android:text="250 TL"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>